{
  "name": "refactory-backend",
  "version": "0.0.0",
  "private": true,
  
  "scripts": {
    "start": "node ./server/bin/www",
    "build": "npm-run-all clean transpile",
    "server": "node ./dist/bin/www",
    "dev": "NODE_ENV=development npm-run-all build server",
    "transpile": "babel ./server --out-dir dist",
    "clean": "rimraf dist",
    "watch:dev": "nodemon"
  },
  "dependencies": {
    "@babel/cli": "^7.14.8",
    "@babel/core": "^7.15.0",
    "@babel/preset-env": "^7.15.0",
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "morgan": "~1.9.1",
    "nodemon": "^2.0.12",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2"
  },
  "babel": {
    "presets": ["@babel/preset-env"]
  },
  "nodemonConfig": { 
    "exec": "npm run dev",
    "watch": ["server/*", "public/*"],
    "ignore": ["**/__tests__/**", "*.test.js", "*.spec.js"]
  }
}
